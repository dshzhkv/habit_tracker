<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.habittracker.fragments.main.MainFragment"
        android:label="@string/label_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_editHabitFragment"
            app:destination="@id/editHabitFragment"
            app:popUpTo="@id/mainFragment" />
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_mainFragment_to_aboutAppFragment"
            app:destination="@id/aboutAppFragment"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/editHabitFragment"
        android:name="com.example.habittracker.fragments.edithabit.EditHabitFragment"
        android:label="fragment_edit_habit" />
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.habittracker.fragments.aboutapp.AboutAppFragment"
        android:label="@string/label_about"
        tools:layout="@layout/fragment_about_app" />
</navigation>