<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/no_habits_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_no_habits"
            android:textAppearance="@style/Text.MainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/habits_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/main_activity_habit_list_margin"
            android:paddingVertical="@dimen/main_activity_habit_list_margin"
            android:clipToPadding="false"
            tools:listitem="@layout/habit_card" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_habit_button"
            android:layout_width="@dimen/main_activity_button_size"
            android:layout_height="@dimen/main_activity_button_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/main_activity_button_margin"
            app:shapeAppearanceOverlay="@style/AddHabitButtonShape"
            app:backgroundTint="@color/dark_blue"
            android:src="@drawable/add_icon"
            app:tint="@color/white"
            android:contentDescription="@string/main_activity_add_habit_button" />


</androidx.constraintlayout.widget.ConstraintLayout>