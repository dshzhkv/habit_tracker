<resources>
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="background">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="toolbarBackgroundColor">?attr/colorPrimary</item>
        <item name="navDrawerHeaderBackgroundColor">?attr/colorPrimary</item>
        <item name="navDrawerHeaderTextColor">?attr/colorOnPrimary</item>
        <item name="bottomSheetColor">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetTextColor">?attr/colorOnPrimary</item>

        <item name="tabSelectedTextColor">?attr/colorPrimaryVariant</item>
        <item name="tabIndicatorColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>