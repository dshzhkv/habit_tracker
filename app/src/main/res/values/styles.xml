<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Text.LargeText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.MainText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.MainText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SmallText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.ExtraSmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FragmentLabelText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppName">
        <item name="fontFamily">@font/days_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/navDrawerHeaderTextColor</item>
    </style>

    <style name="AddHabitButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="HabitTag">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/habit_card_tag_background</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Text.ExtraSmallText</item>
    </style>

    <style name="RadioButton">
        <item name="android:textAppearance">@style/Text.MainText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/edit_habit_radio_button_height</item>
        <item name="android:layout_marginStart">@dimen/edit_habit_radio_button_margin</item>
    </style>

    <style name="ColorPickerButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/border_width</item>
    </style>

    <style name="Spinner">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAppearance">@style/Text.MainText</item>
    </style>

</resources>