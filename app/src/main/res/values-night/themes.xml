<resources>
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_grey</item>
        <item name="colorSecondaryVariant">@color/medium_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="background">@color/almost_black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="toolbarBackgroundColor">?attr/colorSurface</item>
        <item name="navDrawerHeaderBackgroundColor">?attr/colorSurface</item>
        <item name="navDrawerHeaderTextColor">?attr/colorPrimary</item>

        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>
</resources>